# Project Info
PROJECT_NAME="Collaborative Event Management System"
VERSION="1.0.0"
API_V1_STR="/api/v1"
ENVIRONMENT="development"

# Security
SECRET_KEY=your-secret-key-here         # Replace with a secure random string
JWT_SECRET_KEY=your-jwt-secret-key-here # Replace with a secure random string
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL="sqlite+aiosqlite:///./app.db"  # Replace if using PostgreSQL/MySQL in production
SQL_ECHO=true

# Documentation
SHOW_DOCS=true

# Logging
LOG_LEVEL="INFO"

# Cache
CACHE_TTL_MINUTES=5
CACHE_MAX_SIZE=10000

# Rate Limiting
AUTH_RATE_LIMIT=5
API_RATE_LIMIT=100
WS_MAX_CONNECTIONS_PER_USER=5
WS_MAX_MESSAGES_PER_MINUTE=60
